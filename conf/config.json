{
  "log-file-path": "watchdog.log",
  "tenant-process-name": "minio",
  "monitored-disks": [
    "/",
    "/data1",
    "/data2",
    "/data3",
    "/data4"
  ],
  "api-server-config": {
    "node-id": "nc1",
    "api-port": ":8080",
    "api-server-key": "E8AA3FBB0F512B32",
    "api-server-dns": "e2-api.edgedrive.com",
    "tenant-list-api": "api/tenant/list",
    "notify": ""
  },

  "controller-config": {
    "access-keys-dir": "access-keys",
    "controller-dns": "localhost:44344",
    "add-service-account-api": "admin/v1/add_service_account",
    "get-tenant-info-api": "admin/v1/get_tenant_info"
  },

  "monitor":{
    "system-level-interval":60,
    "process-level-interval":60
  },

  "system-level-metrics": {
    "resource_metrics": [
      {
        "name": "avg_load1",
        "threshold": 2,
        "high_load_duration": 60000000000
      },
      {
        "name": "cpu_usage",
        "threshold": 90,
        "high_load_duration": 60000000000
      },
      {
        "name": "mem_usage",
        "threshold": 20,
        "high_load_duration": 60000000000
      }
    ],
    "disk_metrics": {
        "disk_usage": {
          "name": "disk_usage",
          "threshold": 50,
          "high_load_duration": 300000000000
        },

        "io_metrics": {
          "read_bytes":{
            "name": "read_bytes",
            "threshold": 100000000000000,
            "high_load_duration": 300000000000
          },
          "write_bytes":{
            "name": "write_bytes",
            "threshold": 100000000000000,
            "high_load_duration": 300000000000
          },
          "read_count":{
            "name": "read_count",
            "threshold": 100000000000,
            "high_load_duration": 300000000000
          },
          "write_count":{
            "name": "write_count",
            "threshold": 10000000000,
            "high_load_duration": 300000000000
          }
        }
      }
  },
  "process-level-metrics": {
    "CPUusage": {
        "name": "cpu_usage",
        "threshold": 90,
        "high_load_duration": 60000000000
      },
      "MemUsage": {
        "name": "mem_usage",
        "threshold": 20,
        "high_load_duration": 60000000000
      },
      "ConnectionsCount": {
        "name": "conn_count",
        "threshold": 15,
        "high_load_duration": 60000000000
      }
  }
}